<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bjmgf_sdk_page_background" >
    
    <!-- 标题栏 -->
	<RelativeLayout 
	    android:id="@+id/bjmgf_sdk_dock_recharge_sms_title_LayoutId"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:background="@color/bjmgf_sdk_navigation_background" >
		
		<RelativeLayout
            android:id="@+id/bjmgf_sdk_dock_recharge_sms_closeLlId"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
			android:paddingLeft="@dimen/bjmgf_sdk_padding10"
			android:paddingTop="@dimen/bjmgf_sdk_padding10"
			android:paddingRight="@dimen/bjmgf_sdk_margin20"			
			android:paddingBottom="@dimen/bjmgf_sdk_padding10"
			android:layout_alignParentLeft="true">
            <ImageView
                android:id="@+id/bjmgf_sdk_closeAboutBtnId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/bjmgf_sdk_back"/>
        </RelativeLayout>
 
        <TextView
            android:id="@+id/bjmgf_sdk_messageTextViewId"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/bjmgf_sdk_dock_pay_center_smsPayStr"
            android:textColor="@color/bjmgf_sdk_white"
            android:textSize="@dimen/bjmgf_sdk_font_size20"
            android:textStyle="bold" />
    </RelativeLayout>
    
	<TextView android:id="@+id/bjmgf_sdk_dock_recharge_sms_notice_layoutId"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textSize="@dimen/bjmgf_sdk_font_size14"
	    android:textColor="@color/bjmgf_sdk_textgray"
	    android:paddingLeft="@dimen/bjmgf_sdk_margin5"
	    android:paddingRight="@dimen/bjmgf_sdk_margin5"
	    android:paddingTop="@dimen/bjmgf_sdk_margin5"
	    android:paddingBottom="@dimen/bjmgf_sdk_margin5"
        android:layout_below="@id/bjmgf_sdk_dock_recharge_sms_title_LayoutId"
        android:background="@color/bjmgf_sdk_text_bg_sms_pay_pink"
        android:drawableLeft="@drawable/bjmgf_sdk_sms_pay_notice_icon"
        android:drawablePadding="@dimen/bjmgf_sdk_margin5"
        android:visibility="gone"
	    />
    
	<TextView android:id="@+id/bjmgf_sdk_dock_recharge_sms_ratio_layoutId"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="@dimen/bjmgf_sdk_font_size14"
	    android:textColor="@color/bjmgf_sdk_black"
	    android:layout_marginLeft="@dimen/bjmgf_sdk_margin15"
	    android:layout_marginTop="@dimen/bjmgf_sdk_margin10"
	    android:text="@string/bjmgf_sdk_dock_pay_ratio_sms_str"
        android:layout_below="@id/bjmgf_sdk_dock_recharge_sms_notice_layoutId"
	    />
	
    <LinearLayout android:id="@+id/bjmgf_sdk_dock_recharge_sms_chooseMoneyLayoutId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bjmgf_sdk_dock_recharge_sms_ratio_layoutId"
        android:layout_marginTop="@dimen/bjmgf_sdk_margin10"
        android:layout_marginBottom="@dimen/bjmgf_sdk_margin5"
        android:layout_marginLeft="@dimen/bjmgf_sdk_margin10"
        android:layout_marginRight="@dimen/bjmgf_sdk_margin10"
        android:orientation="vertical">
        
       <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">
	       	<TextView android:id="@+id/bjmgf_sdk_dock_recharge_sms_price_5_Id"
	            android:layout_width="@dimen/bjmgf_sdk_margin0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/bjmgf_sdk_margin8"
                android:layout_marginRight="@dimen/bjmgf_sdk_dock_pay_margin5"
                android:layout_marginLeft="@dimen/bjmgf_sdk_dock_pay_margin5"
                android:textColor="@color/bjmgf_sdk_black"
                android:text="@string/bjmgf_sdk_dock_recharge_price_5"
                android:background="@drawable/bjmgf_sdk_text_backgroud_with_roundcorner"
                android:gravity="center"/>
	       	<TextView android:id="@+id/bjmgf_sdk_dock_recharge_sms_price_10_Id"
	            android:layout_width="@dimen/bjmgf_sdk_margin0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/bjmgf_sdk_margin8"
                android:layout_marginRight="@dimen/bjmgf_sdk_dock_pay_margin5"
                android:layout_marginLeft="@dimen/bjmgf_sdk_dock_pay_margin5"
                android:textColor="@color/bjmgf_sdk_black"
                android:text="@string/bjmgf_sdk_dock_recharge_price_10"
                android:background="@drawable/bjmgf_sdk_text_backgroud_with_roundcorner"
                android:gravity="center"/>
            <TextView android:id="@+id/bjmgf_sdk_dock_recharge_sms_price_15_Id"
	            android:layout_width="@dimen/bjmgf_sdk_margin0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/bjmgf_sdk_margin8"
                android:layout_marginRight="@dimen/bjmgf_sdk_dock_pay_margin5"
                android:layout_marginLeft="@dimen/bjmgf_sdk_dock_pay_margin5"
                android:textColor="@color/bjmgf_sdk_black"
                android:text="@string/bjmgf_sdk_dock_recharge_price_15"
                android:background="@drawable/bjmgf_sdk_text_backgroud_with_roundcorner"
                android:gravity="center"/>
             <TextView android:id="@+id/bjmgf_sdk_dock_recharge_sms_price_20_Id"
	            android:layout_width="@dimen/bjmgf_sdk_margin0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/bjmgf_sdk_margin8"
                android:layout_marginRight="@dimen/bjmgf_sdk_dock_pay_margin5"
                android:layout_marginLeft="@dimen/bjmgf_sdk_dock_pay_margin5"
                android:textColor="@color/bjmgf_sdk_black"
                android:text="@string/bjmgf_sdk_dock_recharge_price_20"
                android:background="@drawable/bjmgf_sdk_text_backgroud_with_roundcorner"
                android:gravity="center"/>

        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:layout_marginTop="@dimen/bjmgf_sdk_margin15"
            android:orientation="horizontal">
             
            <TextView android:id="@+id/bjmgf_sdk_dock_recharge_sms_price_30_Id"
	            android:layout_width="@dimen/bjmgf_sdk_margin0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/bjmgf_sdk_margin8"
                android:layout_marginRight="@dimen/bjmgf_sdk_dock_pay_margin5"
                android:layout_marginLeft="@dimen/bjmgf_sdk_dock_pay_margin5"
                android:textColor="@color/bjmgf_sdk_black"
                android:text="@string/bjmgf_sdk_dock_recharge_price_30"
                android:background="@drawable/bjmgf_sdk_text_backgroud_with_roundcorner"
                android:gravity="center"/>
	       	<TextView 
	            android:layout_width="@dimen/bjmgf_sdk_margin0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/bjmgf_sdk_margin8"
                android:layout_marginRight="@dimen/bjmgf_sdk_dock_pay_margin5"
                android:layout_marginLeft="@dimen/bjmgf_sdk_dock_pay_margin5"
                android:gravity="center"/>
			<TextView 
	            android:layout_width="@dimen/bjmgf_sdk_margin0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/bjmgf_sdk_margin8"
                android:layout_marginRight="@dimen/bjmgf_sdk_dock_pay_margin5"
                android:layout_marginLeft="@dimen/bjmgf_sdk_dock_pay_margin5"
                android:gravity="center"/>
			<TextView 
	            android:layout_width="@dimen/bjmgf_sdk_margin0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/bjmgf_sdk_margin8"
                android:layout_marginRight="@dimen/bjmgf_sdk_dock_pay_margin5"
                android:layout_marginLeft="@dimen/bjmgf_sdk_dock_pay_margin5"
                android:gravity="center"/>
        </LinearLayout>
 
    </LinearLayout>

	<LinearLayout android:id="@+id/bjmgf_sdk_dock_recharge_sms_goodStrLayoutId"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 		
	    android:layout_centerHorizontal="true"
	    android:layout_marginBottom="@dimen/bjmgf_sdk_margin5"
	    android:layout_above="@+id/bjmgf_sdk_dock_recharge_sms_buybtnId"
	    android:orientation="horizontal">
		<TextView android:id="@+id/bjmgf_sdk_dock_recharge_sms_recharge_goodsStrId"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/bjmgf_sdk_text_price_color"
	        android:textSize="@dimen/bjmgf_sdk_font_size16"
	        />
	    <TextView android:id="@+id/bjmgf_sdk_dock_recharge_sms_recharge_goods_unitStrId"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/bjmgf_sdk_dock_pay_center_unitStr"
	        android:textSize="@dimen/bjmgf_sdk_font_size12"
	        android:textColor="@color/bjmgf_sdk_textgray"/>
	</LinearLayout>
	
    <TextView android:id="@+id/bjmgf_sdk_dock_recharge_sms_recharge_promptId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
 		android:layout_marginLeft="@dimen/bjmgf_sdk_margin15" 
	    android:layout_marginRight="@dimen/bjmgf_sdk_margin15" 
	    android:layout_marginTop="@dimen/bjmgf_sdk_margin10"
	    android:layout_marginBottom="@dimen/bjmgf_sdk_margin10"
        android:textColor="@color/bjmgf_sdk_text_gray"
        android:textSize="@dimen/bjmgf_sdk_font_size12"
        android:lineSpacingMultiplier="@dimen/bjmgf_sdk_spb_float_ratio"
        android:text="@string/bjmgf_sdk_dock_recharge_prompt_paylessStr"
	    android:layout_below="@id/bjmgf_sdk_dock_recharge_sms_chooseMoneyLayoutId"/>

	<Button android:id="@+id/bjmgf_sdk_dock_recharge_sms_buybtnId"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:visibility="visible"
	    android:layout_marginBottom="@dimen/bjmgf_sdk_margin10"
	    android:layout_marginLeft="@dimen/bjmgf_sdk_margin15" 
	    android:layout_marginRight="@dimen/bjmgf_sdk_margin15" 
	   	android:background="@drawable/bjmgf_sdk_blue_button_big_selector_roundcorner"
	    android:text="@string/bjmgf_sdk_dock_recharge_rechargeAndbuy"
	    android:textColor="@color/bjmgf_sdk_white"
	    android:textSize="@dimen/bjmgf_sdk_font_size14"
	    android:layout_above="@+id/bjmgf_sdk_dock_recharge_sms_promptStrId_one"
	    />
	
	<TextView android:id="@+id/bjmgf_sdk_dock_recharge_sms_promptStrId_one"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="@dimen/bjmgf_sdk_margin5"
	    android:layout_marginLeft="@dimen/bjmgf_sdk_margin15" 
	    android:layout_marginRight="@dimen/bjmgf_sdk_margin15"
	    android:text="@string/bjmgf_sdk_dock_recharge_sms_pay_prompt_warn_one"
	    android:textColor="@color/bjmgf_sdk_recharge_light_red"
	    android:textSize="@dimen/bjmgf_sdk_font_size12"
	    
	    android:layout_above="@+id/bjmgf_sdk_dock_recharge_sms_promptStrId_two"/>
	
	<TextView android:id="@+id/bjmgf_sdk_dock_recharge_sms_promptStrId_two"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="@dimen/bjmgf_sdk_margin5"
	    android:layout_marginLeft="@dimen/bjmgf_sdk_margin15" 
	    android:layout_marginRight="@dimen/bjmgf_sdk_margin15"
	    android:text="@string/bjmgf_sdk_dock_recharge_sms_pay_prompt_warn_two"
	    android:textColor="@color/bjmgf_sdk_recharge_light_red"
	    android:textSize="@dimen/bjmgf_sdk_font_size12"
	    
	    android:layout_above="@+id/bjmgf_sdk_dock_recharge_sms_promptStrId_three"/>
	
	<TextView android:id="@+id/bjmgf_sdk_dock_recharge_sms_promptStrId_three"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="@dimen/bjmgf_sdk_margin10"
	    android:layout_marginLeft="@dimen/bjmgf_sdk_margin15" 
	    android:layout_marginRight="@dimen/bjmgf_sdk_margin15"
	    android:text="@string/bjmgf_sdk_dock_recharge_sms_pay_prompt_warn_three"
	    android:textColor="@color/bjmgf_sdk_recharge_light_red"
	    android:textSize="@dimen/bjmgf_sdk_font_size12"
	    
	    android:layout_alignParentBottom="true"/>

</RelativeLayout>

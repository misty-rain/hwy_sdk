<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:clearedit="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <!-- 标题栏 -->
    <include
        android:id="@+id/bjmgf_sdk_float_account_manager_modifypwd_navigationLlId"
        layout="@layout/bjmgf_sdk_dock_header"/>

    <View
        android:id="@+id/bjmgf_sdk_float_account_manager_modifypwd_keyboard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bjmgf_sdk_bg"
        android:orientation="vertical">


        <TextView
            android:id="@+id/bjmgf_sdk_find_pwd_email_confirm_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bjmgf_sdk_margin15"
            android:layout_marginLeft="@dimen/bjmgf_sdk_margin15"
            android:layout_marginRight="@dimen/bjmgf_sdk_margin15"
            android:layout_marginTop="@dimen/bjmgf_sdk_margin15"
            android:text="@string/bjmgf_sdk_floatWindow_accountManager_bindEmail_resend_str"
            android:textColor="@color/bjmgf_sdk_account_gray"
            android:textSize="@dimen/bjmgf_sdk_font_size14"/>

    </LinearLayout>
</LinearLayout>

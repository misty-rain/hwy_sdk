<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bjmgf_sdk_login_list_item_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bjmgf_sdk_white"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bjmgf_sdk_gap_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/bjmgf_sdk_gap_gray" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bjmgf_sdk_margin10"
            android:layout_marginTop="@dimen/bjmgf_sdk_margin10"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="@dimen/bjmgf_sdk_margin25"
                android:layout_height="@dimen/bjmgf_sdk_margin25"
                android:src="@drawable/bjmgf_sdk_account_list_face" 
                android:layout_marginLeft="@dimen/bjmgf_sdk_margin5"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bjmgf_sdk_margin10"
            android:layout_marginTop="@dimen/bjmgf_sdk_margin10"
            android:layout_weight="6" >

            <TextView
                android:id="@+id/bjmgf_sdk_login_list_item_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bjmgf_sdk_margin10"
                android:layout_marginRight="@dimen/bjmgf_sdk_margin30"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="look2"
                android:textColor="@color/bjmgf_sdk_black"
                android:textSize="@dimen/bjmgf_sdk_font_size14" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bjmgf_sdk_close_rl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bjmgf_sdk_margin10"
            android:layout_marginTop="@dimen/bjmgf_sdk_margin10"
            android:layout_weight="3" >

            <ImageButton
                android:id="@+id/bjmgf_sdk_login_list_item_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/bjmgf_sdk_margin10"
                android:background="@color/bjmgf_sdk_white"
                android:src="@drawable/com_facebook_tooltip_black_xout" />
        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/bjmgf_sdk_gap_gray" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/bjmgf_sdk_gap_gray" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vercarousel="http://schemas.android.com/apk/res-auto" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical"
   	android:background="@drawable/bjmgf_sdk_white_background_selector" >

    <RelativeLayout
        android:id="@+id/bjmgf_sdk_selectpettwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/bjmgf_sdk_release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:text="@string/bjmgf_sdk_release"
            android:textColor="@drawable/bjmgf_sdk_blue_text_button_selector" />

        <TextView
            android:id="@+id/bjmgf_sdk_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="12dp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:text="@string/bjmgf_sdk_finish"
            android:textColor="@drawable/bjmgf_sdk_blue_text_button_selector" />

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />
    
    <org.bojoy.gamefriendsdk.app.dock.page.impl.widget.carousel.VerticalCarouselLayout 
	    android:id="@+id/bjmgf_sdk_question_carousel_layout"
	    android:layout_width="match_parent"
       	android:layout_height="200dp"
		vercarousel:imageWidth="500"
		vercarousel:imageHeight="80" />
    
    <View
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

</LinearLayout>
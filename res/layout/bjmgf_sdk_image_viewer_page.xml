<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bjmgf_sdk_black" >
    
    <ImageView
        android:id="@+id/bjmgf_sdk_image_viewer_id"
        android:layout_width="match_parent"
    	android:layout_height="match_parent" 
    	android:scaleType="fitCenter"/>
    
    <TextView
        android:id="@+id/bjmgf_sdk_image_viewer_failed_hint_id"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:gravity="center"
    	android:textSize="@dimen/bjmgf_sdk_font_size20"
    	android:textColor="@color/bjmgf_sdk_white"
    	android:text="@string/bjmgf_sdk_question_image_load_failed"
    	android:visibility="gone" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:clearedit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/bjmgf_sdk_margin10"
    android:orientation="vertical"
    android:background="@drawable/bjmgf_sdk_bg" >
    
   	<include layout="@layout/bjmgf_sdk_include_titlefix"/>
   	
	<TextView
		android:id="@+id/bjmgf_sdk_checkCode_register_describeId"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal"
		android:layout_marginLeft="@dimen/bjmgf_sdk_margin5"
		android:layout_marginRight="@dimen/bjmgf_sdk_margin5"
		android:layout_marginTop="@dimen/bjmgf_sdk_margin15"
		android:text="@string/bjmgf_sdk_register_dialog_getCheckCodeTextViewStr"
		android:textColor="@color/bjmgf_sdk_gray"
		android:textSize="@dimen/bjmgf_sdk_font_size16" />
	
	<com.bojoy.bjsdk_mainland_new.widget.ClearEditText
	    android:id="@+id/bjmgf_sdk_checkCode_register_nameEditTextId"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bjmgf_sdk_margin5"
        android:layout_marginRight="@dimen/bjmgf_sdk_margin5"
        android:layout_marginTop="@dimen/bjmgf_sdk_margin15"
        android:singleLine="true"
	 	android:hint="@string/bjmgf_sdk_register_dialog_getCheckCodeEditTextStr"
        android:textColor="@color/bjmgf_sdk_gray"
        android:textSize="@dimen/bjmgf_sdk_font_size14"
        android:textColorHint="@color/bjmgf_sdk_editTextFontGray"
        android:imeOptions="flagNoExtractUi"
        android:inputType="phone"
        android:maxLength="11"
        clearedit:clear_src="@drawable/bjmgf_sdk_button_gray_close" />
	  
	<Button
        android:id="@+id/bjmgf_sdk_checkCode_register_buttonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bjmgf_sdk_margin5"
        android:layout_marginRight="@dimen/bjmgf_sdk_margin5"
        android:layout_marginTop="@dimen/bjmgf_sdk_margin10"
        android:layout_marginBottom="@dimen/bjmgf_sdk_margin10"
        android:background="@drawable/bjmgf_sdk_blue_button_big_selector"
        android:text="@string/bjmgf_sdk_register_dialog_getCheckCodeBtnStr"
        android:textColor="@color/bjmgf_sdk_white"
        android:textSize="@dimen/bjmgf_sdk_font_size20" />
			    
</LinearLayout>

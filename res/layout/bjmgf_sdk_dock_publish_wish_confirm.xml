<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" 
	android:layout_height="match_parent"
	xmlns:clearedit="http://schemas.android.com/apk/res-auto"
	android:background="@color/bjmgf_sdk_line_gray">
    	
    <!-- 标题栏 -->
	<RelativeLayout  android:id="@+id/bjmgf_sdk_dock_publish_wish_confirm_navigationLlId"
		android:layout_width="match_parent" android:layout_height="48dp"
		android:paddingRight="@dimen/bjmgf_sdk_margin5"
		android:background="@color/bjmgf_sdk_navigation_background" >
		
		<RelativeLayout
            android:id="@+id/bjmgf_sdk_dock_publish_wish_confirm_backLlId"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
			android:padding="@dimen/bjmgf_sdk_margin10"
			android:layout_alignParentLeft="true">
            <ImageView
                android:id="@+id/bjmgf_sdk_dock_publish_wish_confirm_backImageViewId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/bjmgf_sdk_back"/>
        </RelativeLayout>
			
        <TextView
            android:id="@+id/bjmgf_sdk_dock_publish_wish_confirm_titleTextViewId"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/bjmgf_sdk_dock_public_wish_confirm_Str"
            android:textColor="@color/bjmgf_sdk_white"
            android:textSize="@dimen/bjmgf_sdk_font_size17"
            android:textStyle="bold" />
        
        <RelativeLayout android:id="@+id/bjmgf_sdk_dock_wish_detail_publish_btnllId"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
		    android:padding="@dimen/bjmgf_sdk_margin10">
	
			<TextView
			    android:id="@+id/bjmgf_sdk_dock_wish_detail_publish_btnId"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="@string/bjmgf_sdk_dock_public_wish_confirm_message_publish_btn_Str"
			    android:textColor="@color/bjmgf_sdk_white" 
			    android:textSize="@dimen/bjmgf_sdk_font_size14"/>
		</RelativeLayout>
        
	</RelativeLayout>
	
	<ScrollView 
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
       	android:scrollbars="none"
		android:layout_below="@id/bjmgf_sdk_dock_publish_wish_confirm_navigationLlId">
	    <LinearLayout
		    android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
		    
			<RelativeLayout android:id="@+id/bjmgf_sdk_dock_publish_wish_confirm_goodsInfoId"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/bjmgf_sdk_white"
		        android:padding="@dimen/bjmgf_sdk_margin5">
			    
		        <ImageView android:id="@+id/bjmgf_sdk_dock_publish_wish_confirm_iconId"
			        android:layout_width="@dimen/bjmgf_sdk_goods_icon_size"
			        android:layout_height="@dimen/bjmgf_sdk_goods_icon_size"
			        android:layout_alignLeft="@+id/bjmgf_sdk_dock_wish_item_icon_bgId"
			        android:layout_alignTop="@+id/bjmgf_sdk_dock_wish_item_icon_bgId"/>
		        
				<ImageView android:id="@+id/bjmgf_sdk_dock_wish_item_icon_bgId"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="@dimen/bjmgf_sdk_margin5"
			        android:src="@drawable/bjmgf_sdk_dock_wishlist_item_bg"/>
			        
		 	    <TextView android:id="@+id/bjmgf_sdk_dock_publish_wish_confirm_nameId"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_toRightOf="@id/bjmgf_sdk_dock_wish_item_icon_bgId"
			        android:layout_alignTop="@id/bjmgf_sdk_dock_wish_item_icon_bgId"
			        android:layout_marginLeft="@dimen/bjmgf_sdk_margin10"
			        android:textSize="@dimen/bjmgf_sdk_font_size16"
			        android:textColor="@color/bjmgf_sdk_black"
			        android:text="物品1"/>	    

			    <TextView android:id="@+id/bjmgf_sdk_dock_publish_wish_confirm_price_textId"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_toRightOf="@id/bjmgf_sdk_dock_wish_item_icon_bgId"
			        android:layout_marginLeft="@dimen/bjmgf_sdk_margin10"
			    	android:drawableLeft="@drawable/bjmgf_sdk_dock_wish_item_price_icon"
			    	android:layout_centerVertical="true"
			    	android:layout_below="@id/bjmgf_sdk_dock_publish_wish_confirm_nameId"
		        	android:textSize="@dimen/bjmgf_sdk_font_size14"
			        android:textColor="@color/bjmgf_sdk_text_price_color"
			        android:text="5"/>
				
				<TextView android:id="@+id/bjmgf_sdk_dock_publish_wish_confirm_game_nameId"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_toRightOf="@id/bjmgf_sdk_dock_wish_item_icon_bgId"
			        android:layout_below="@id/bjmgf_sdk_dock_publish_wish_confirm_price_textId"
			        android:layout_marginLeft="@dimen/bjmgf_sdk_margin10"
			        android:textColor="@color/bjmgf_sdk_textgray"
			        android:textSize="@dimen/bjmgf_sdk_font_size14"
			        android:text="熹妃传"/>
			    
		    </RelativeLayout>
		    
			<RelativeLayout android:id="@+id/bjmgf_sdk_dock_publish_wish_confirm_message_LayoutId"
			    android:layout_width="match_parent"
			    android:layout_height="90dp"
			    android:layout_marginTop="@dimen/bjmgf_sdk_margin10"
			    android:background="@color/bjmgf_sdk_white">
				<RelativeLayout android:id="@+id/bjmgf_sdk_dock_publish_wish_confirm_message_promptId"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
			        android:layout_marginTop="@dimen/bjmgf_sdk_margin5"
			        android:layout_marginBottom="@dimen/bjmgf_sdk_margin5">
				    <TextView android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_centerVertical="true"
				        android:layout_marginLeft="@dimen/bjmgf_sdk_margin10"
				        android:text="@string/bjmgf_sdk_dock_public_wish_confirm_message_left_Str"
				        android:textSize="@dimen/bjmgf_sdk_font_size12"
				        android:textColor="@color/bjmgf_sdk_text_gray"/>
				    
					<LinearLayout android:id="@+id/bjmgf_sdk_dock_public_wish_confirm_message_right_Str_layoutId"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:paddingLeft="@dimen/bjmgf_sdk_margin10"
					    android:paddingRight="@dimen/bjmgf_sdk_margin10"
					    android:paddingTop="@dimen/bjmgf_sdk_margin5"
					    android:layout_centerVertical="true"
					    android:paddingBottom="@dimen/bjmgf_sdk_margin5"
				        android:layout_alignParentRight="true">
					    <TextView android:id="@+id/bjmgf_sdk_dock_public_wish_confirm_message_right_StrId"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:text="@string/bjmgf_sdk_dock_public_wish_confirm_message_right_Str"
					        android:textColor="@color/bjmgf_sdk_text_wish_role_color"
					        android:textSize="@dimen/bjmgf_sdk_font_size12"/>
		   			</LinearLayout>
		   			
				</RelativeLayout>
				
				<RelativeLayout android:id="@+id/bjmgf_sdk_dock_publish_wish_confirm_messageEditTextLayoutId"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="@dimen/bjmgf_sdk_margin10"
				    android:layout_marginRight="@dimen/bjmgf_sdk_margin10"
			        android:layout_below="@id/bjmgf_sdk_dock_publish_wish_confirm_message_promptId">
				    <EditText
					    android:id="@+id/bjmgf_sdk_dock_publish_wish_confirm_messageEditTextId"
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
				        android:singleLine="true"
				        android:textColor="@color/bjmgf_sdk_black"
				        android:layout_alignParentLeft="true"
				        android:paddingLeft="@dimen/bjmgf_sdk_margin8"
				        android:paddingTop="@dimen/bjmgf_sdk_margin8"
				        android:paddingBottom="@dimen/bjmgf_sdk_margin8"
				        android:paddingRight="@dimen/bjmgf_sdk_margin50"
				        android:textSize="@dimen/bjmgf_sdk_font_size14"
				        android:background="@drawable/bjmgf_sdk_edittext_backgroud_with_roundcorner"
				        android:imeOptions="flagNoExtractUi"
			        	android:inputType="text" />
				    
					<TextView android:id="@+id/bjmgf_sdk_dock_publish_wish_confirm_messageStrCountId"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:textColor="@color/bjmgf_sdk_text_gray"
			            android:layout_centerVertical="true"
			            android:layout_alignParentRight="true"
			            android:layout_marginRight="@dimen/bjmgf_sdk_margin10"
			            android:textSize="@dimen/bjmgf_sdk_font_size12"/>
				</RelativeLayout>
					
			</RelativeLayout>
			
			<View
			    android:layout_width="match_parent"
			    android:layout_height="@dimen/bjmgf_sdk_margin10"/>
			
			<TextView android:id="@+id/bjmgf_sdk_dock_publish_wish_confirm_send_textId"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:paddingLeft="@dimen/bjmgf_sdk_margin10"
			    android:paddingTop="@dimen/bjmgf_sdk_margin5"
			    android:text="@string/bjmgf_sdk_dock_public_wish_confirm_message_sendto_Str"
			    android:textColor="@color/bjmgf_sdk_textgray"
			    android:background="@color/bjmgf_sdk_white"
			    android:textSize="@dimen/bjmgf_sdk_font_size12"/>
			
			<HorizontalScrollView android:id="@+id/bjmgf_sdk_dock_publish_wish_confirm_has_select_listId"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:fadingEdge="none"
			    android:scrollbars="none"
			    android:background="@color/bjmgf_sdk_white">
				<LinearLayout android:id="@+id/bjmgf_sdk_dock_publish_wish_confirm_has_select_layoutId"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:background="@color/bjmgf_sdk_white"
				    android:layout_marginLeft="@dimen/bjmgf_sdk_margin5"
				    android:orientation="horizontal" >
				</LinearLayout>
			</HorizontalScrollView>
			
		</LinearLayout>
	</ScrollView>
	
</RelativeLayout>



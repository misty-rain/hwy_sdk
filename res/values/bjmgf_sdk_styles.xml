<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="bjmgf_sdk_Dialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@color/bjmgf_sdk_transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="ProgressBar.Horizontal" parent="@android:style/Widget.ProgressBar.Horizontal"></style>
    
    <style name="bjmgf_sdk_SmoothProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="spb_color">@color/bjmgf_sdk_spb_default_color</item>
        <item name="spb_sections_count">@integer/bjmgf_sdk_spb_default_sections_count</item>
        <item name="spb_speed">@string/bjmgf_sdk_spb_default_speed</item>
        <item name="spb_stroke_width">@dimen/bjmgf_sdk_spb_default_stroke_width</item>
        <item name="spb_stroke_separator_length">@dimen/bjmgf_sdk_spb_default_stroke_separator_length</item>
        <item name="spb_reversed">@bool/bjmgf_sdk_spb_default_reversed</item>
        <item name="spb_mirror_mode">@bool/bjmgf_sdk_spb_default_mirror_mode</item>
        <item name="spb_progressiveStart_activated">@bool/bjmgf_sdk_spb_default_progressiveStart_activated</item>
        <item name="spb_background">@null</item>
        <item name="spb_generate_background_with_colors">false</item>
    </style>
    
    <style name="bjmgf_sdk_transcutestyle_yhxf" parent="@android:style/Theme.Dialog">
         <item name="android:windowFrame">@android:color/transparent</item><!--边框-->
         <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
         <item name="android:windowIsTranslucent">true</item><!--半透明-->
         <item name="android:windowNoTitle">true</item><!--无标题-->
         <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
         <item name="android:backgroundDimAmount">0.3</item>
         <item name="android:windowAnimationStyle">@null</item>
     </style>
    
</resources>
